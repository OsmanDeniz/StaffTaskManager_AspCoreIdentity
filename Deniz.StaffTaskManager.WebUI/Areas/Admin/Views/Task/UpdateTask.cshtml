@model TaskUpdateViewModel
@{
    ViewData["Title"] = "UpdateTask";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="UpdateTask" method="post" class="w-75 mx-auto p-3">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label>Gorev Adi :</label>
        <span class="text-danger" asp-validation-for="@Model.Name"></span>
        <input type="text" asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Aciklama</label>
        <span class="text-danger" asp-validation-for="@Model.Description"></span>
        <textarea asp-for="@Model.Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Bir aciliyet durumu seciniz : </label>
        <span class="text-danger" asp-validation-for="@Model.UrgencyId"></span>
        <select class="form-control" asp-for="@Model.UrgencyId" asp-items="ViewBag.Urgencies">
            <option value="-1">Seciniz</option>
        </select>
    </div>
    <button type="submit" class="btn btn-info float-right">Guncelle</button>
</form>

@section JS{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

