@model List<UrgencyListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@if (Model.Count != 0)
{
    <a asp-action="AddUrgency" asp-controller="Urgency" class="btn btn-sm btn-outline-info my-2 float-right"> Aciliyet Ekle</a>
    <table class="table table-hover table-sm">
        <thead>
            <tr>
                <th>Aciliyet Durumu</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UrgencyLevel</td>
                    <td>
                        <a asp-action="UpdateUrgency" asp-controller="Urgency" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">Güncelle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center mt-4">
        <p class="lead">
            Sistemde kayitli aciliyet durumu bulunamadi.
        </p>
        <a asp-action="AddUrgency" asp-controller="Urgency" class="btn btn-sm btn-outline-info my-2"> Aciliyet Ekle</a>
    </div>
}


